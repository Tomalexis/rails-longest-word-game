<h1>New Game</h1>

<div class="letters mb-3">
    <% @letters.each do |letter| %>
        <div><%= letter %></div>
    <% end %>
  </div>

<h2>What is the longest word you can find ?</h2>

<div class="user-input row">
<form action="/score" method="post" class="col-6" data-turbo="false">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
  <div class="input-group mb-3" id="form">
    <input type="text" name="word" class="form-control" aria-describedby="basic-addon2">
    <div class="input-group-append">
      <button class="btn btn-primary" type="submit">Play</button>
    </div>
  </div>
</form>
</div>
